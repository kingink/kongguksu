<div id="userdetails">
<p>
  <b>Twitter ID:</b>
  <%=h @user.twitter_id %>
</p>

<p>
  <b>Screen name:</b>
  <%=h @user.screen_name %>
</p>

<p>
  <b>Token:</b>
  <%=h @user.token %>
</p>

<p>
  <b>Secret:</b>
  <%=h @user.secret %>
</p>
</div>

<div id="menu">
<%= link_to_remote "Show mentions",
   :url => partialmentions_user_path(@user),
   :method => :get,
   :loading => "$('error').innerHTML = '';$('data').innerHTML = 'Loading..';",
   :update => { :success => "data", :failure => "error" }
%>
</div>

<div id="error">
</div>
<div id="data">
</div>
